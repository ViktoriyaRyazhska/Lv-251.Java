<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

        <!--
        Inspiration got from here
        http://websystique.com/springmvc/spring-4-mvc-apache-tiles-3-annotation-based-example/
        -->

<tiles-definitions>

    <!-- Base Definition -->
    <definition name="base-definition"
                template="/WEB-INF/tiles/layouts/defaultLayout.jsp">
        <put-attribute name="title" value="" />
        <put-attribute name="header" value="/WEB-INF/tiles/template/header.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/WEB-INF/tiles/template/footer.jsp" />
    </definition>

    <!-- Home Page -->
    <definition name="home" extends="base-definition">
        <put-attribute name="title" value="Home" />
        <put-attribute name="body" value="" />
    </definition>

    <!-- Doctors Page -->
    <definition name="allDoctors" extends="base-definition">
        <put-attribute name="title" value="Doctors" />
        <put-attribute name="body" value="" />
    </definition>


</tiles-definitions>